<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FuelLogger.Pages.EditCarInfo"
             Title="Edit car info">
  <StackLayout>
  <Grid HeightRequest="200">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
    <RowDefinition Height="*" />
  <RowDefinition Height="*" />
    </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="1*" />
  <ColumnDefinition Width="3*" />
  <ColumnDefinition Width="0.5*" />
  </Grid.ColumnDefinitions>
    
  <Label Text="Car type :" Grid.Row="0" Grid.Column="0" VerticalOptions="Center" TranslationX="10" />
        <Entry Text="{Binding CarType}" Grid.Row="0" Grid.Column="1" VerticalOptions="Center" />
   <Label Text="Year :" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" TranslationX="10" />
        <Entry Text="{Binding CarYear}" Grid.Row="1" Grid.Column="1" VerticalOptions="Center"/>
  <Label Text="Car HP :" Grid.Row="2" Grid.Column="0"  VerticalOptions="Center" TranslationX="10"/>
        <Entry Text="{Binding CarHP}" Grid.Row="2" Grid.Column="1" VerticalOptions="Center"/>
  </Grid>
  
   </StackLayout>
    
</ContentPage>