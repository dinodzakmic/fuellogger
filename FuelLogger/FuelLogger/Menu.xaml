              </StackLayout>
                <BoxView HorizontalOptions="FillAndExpand" HeightRequest="2" Color="Black" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </ContentPage>-->
  </MasterDetailPage.Master>
  
  <MasterDetailPage.Detail>
  </MasterDetailPage.Detail>
  
  
</MasterDetailPage>